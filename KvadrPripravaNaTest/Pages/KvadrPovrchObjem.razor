@code {
    private Models.Kvadr kvadr1 = new Models.Kvadr();
    private Models.Kvadr kvadr2 = new Models.Kvadr();

    public bool Kontrola(int strana)
    {
        if (strana <= 0 || strana > 200)
        {
            return false;
        }
        else
        {
            return true;
        }
    }

    public string ZískejPomerPovrchuKvadru1Kvadru2(Models.Kvadr kvadr1, Models.Kvadr kvadr2)
    {
        if (kvadr1.PovrchKvadru != 0 && kvadr2.PovrchKvadru != 0)
        {
            var vysledek = Math.Round(kvadr1.PovrchKvadru / kvadr2.PovrchKvadru, 2);
            return $"{vysledek}";
        }
        else
        {
            return $"Nejsou zadané všechny hodnoty";
        }
    }

    public string ZískejPomerObjemKvadru1Kvadru2(Models.Kvadr kvadr1, Models.Kvadr kvadr2)
    {
        if (kvadr1.ObjemKvadru != 0 && kvadr2.ObjemKvadru != 0)
        {
            var vysledek = Math.Round(kvadr1.ObjemKvadru / kvadr2.ObjemKvadru, 2);
            return $"{vysledek}";
        }
        else
        {
            return $"Nejsou zadané všechny hodnoty";
        }
    }


}
